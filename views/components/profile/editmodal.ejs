<!-- Edit Profile Modal -->
<div id="editProfileModal-<%= profile._id %>" tabindex="-1" 
    class="hidden fixed top-0 right-0 left-0 z-50 flex justify-center items-center w-full h-screen">
    
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-sm">
            <!-- Close Button -->
            <button type="button" class="absolute top-3 right-3 text-gray-400 hover:text-gray-900" data-modal-hide="editProfileModal-<%= profile._id %>">
                <i class="fas fa-times"></i>
            </button>

            <!-- Modal Content -->
            <div class="p-4 md:p-5 text-center">
                <h3 class="mb-5 text-lg font-medium text-gray-700">Edit Profile</h3>

                <!-- Form -->
                <form action="/profile/edit/<%= profile._id %>" method="POST">
                    <!-- Name Field (Everyone) -->
                    <div class="mb-4 text-left">
                        <label class="block text-gray-600 text-sm font-medium">Name</label>
                        <input type="text" name="name" value="<%= profile.name %>"
                            class="w-full px-4 py-2 border rounded-md bg-gray-100 text-black">
                    </div>

                    <% if (profile.role !== "admin") { %>
                        <!-- Address -->
                        <div class="mb-4 text-left">
                            <label class="block text-gray-600 text-sm font-medium">Address</label>
                            <input type="text" name="address" value="<%= profile.address %>"
                                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300 bg-gray-50">
                        </div>

                        <!-- Course -->
                        <div class="mb-4 text-left">
                            <label class="block text-gray-600 text-sm font-medium">Course</label>
                            <input type="text" name="course" value="<%= profile.course %>"
                                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300 bg-gray-50">
                        </div>

                        <!-- Semester -->
                        <div class="mb-4 text-left">
                            <label class="block text-gray-600 text-sm font-medium">Semester</label>
                            <input type="number" name="semester" value="<%= profile.semester %>"
                                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300 bg-gray-50">
                        </div>

                        <!-- Roll Number -->
                        <div class="mb-4 text-left">
                            <label class="block text-gray-600 text-sm font-medium">Roll Number</label>
                            <input type="number" name="rollno" value="<%= profile.rollno %>"
                                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300 bg-gray-50">
                        </div>
                    <% } %>

                    <!-- Buttons -->
                    <div class="mt-4 flex justify-center space-x-2">
                        <button type="button" data-modal-hide="editProfileModal-<%= profile._id %>"
                            class="py-2.5 px-5 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100">
                            Cancel
                        </button>
                        <button type="submit"
                            class="py-2.5 px-5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-800">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
