<!-- Admin Delete Confirmation Modal -->
<div id="delete-modal-<%= admin._id %>" tabindex="-1"
    class="hidden fixed top-0 right-0 left-0 z-50 flex justify-center items-center w-full h-screen bg-black/50 backdrop-blur-sm">

    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-sm">
            <!-- Close Button -->
            <button type="button" class="absolute top-3 right-3 text-gray-400 hover:text-gray-900"
                data-modal-hide="delete-modal-<%= admin._id %>">
                <i class="fas fa-times"></i>
            </button>

            <!-- Modal Content -->
            <div class="p-4 md:p-5 text-center">
                <h3 class="mb-5 text-lg font-normal text-gray-500">
                    Are you sure you want to remove admin <b><%= admin.name %></b>?
                </h3>

                <!-- Buttons Wrapper -->
                <div class="flex justify-center gap-3">
                    <form action="/admin/removeadmin/<%= admin._id %>?_method=DELETE" method="POST">
                        <button type="submit"
                            class="text-white bg-red-600 hover:bg-red-800 font-medium rounded-lg text-sm px-5 py-2.5">
                            Yes, Delete
                        </button>
                    </form>

                    <button type="button" data-modal-hide="delete-modal-<%= admin._id %>"
                        class="py-2.5 px-5 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100">
                        No, Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>