<div id="user-management" class="section hidden">
    <div id="student-management" class="bg-white shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
            ðŸ‘¥ User Management
        </h2>
        <div class="overflow-x-auto">
            <table class="w-full border-collapse rounded-lg overflow-hidden shadow-lg">
                <thead class="bg-[#316de5] text-white">
                    <tr>
                        <th class="p-4 text-left">Name</th>
                        <th class="p-4 text-left">Email</th>
                        <th class="p-4 text-left">Semester</th>
                        <th class="p-4 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr class="border-b hover:bg-gray-100 transition">
                            <td class="p-4">
                                <%= user.name %>
                            </td>
                            <td class="p-4">
                                <%= user.email %>
                            </td>
                            <td class="p-4">
                                <%= user.semester %>
                            </td>
                            <td class="p-4 flex items-center justify-center space-x-2">
                                <% if (!user.approved) { %>
                                    <form action="/admin/users/approve/<%= user._id %>?_method=PATCH" method="POST">
                                        <button type="submit"
                                            class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition">
                                            <i class="fa-solid fa-check"></i>
                                        </button>
                                    </form>
                                    <% } %>
                                        <form action="/admin/users/delete/<%= user._id %>?_method=DELETE" method="POST">
                                            <button type="submit"
                                                class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>

                            </td>

                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <div id="admin-management" class="bg-white shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
            ðŸ‘‘ Admin Management
        </h2>
        <div class="overflow-x-auto">
            <table class="w-full border-collapse rounded-lg overflow-hidden shadow-lg">
                <thead class="bg-[#316de5] text-white">
                    <tr>
                        <th class="p-4 text-left">Name</th>
                        <th class="p-4 text-left">Email</th>
                        <th class="p-4 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% admins.forEach(admin=> { %>
                        <tr class="border-b hover:bg-gray-100 transition">
                            <td class="p-4">
                                <%= admin.name %>
                            </td>
                            <td class="p-4">
                                <%= admin.email %>
                            </td>
                            <td class="p-4 flex items-center justify-center space-x-2">
                                <form action="/admin/removeadmin/<%= admin._id %>?_method=DELETE" method="POST">
                                    <button type="submit"
                                        class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>

                            </td>

                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>
        <!-- Add Admin Button -->
        <div class="flex justify-end mt-4">
            <button data-modal-target="addAdminModal" data-modal-toggle="addAdminModal"
                class="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-md shadow-md transition">
                <i class="fa-solid fa-user-plus"></i> Add Admin
            </button>
        </div>

        <!-- Modal -->
        <div id="addAdminModal" tabindex="-1" aria-hidden="true"
            class="fixed inset-0 z-50 hidden flex items-center justify-center bg-gray-100">
            <div class="relative w-full max-w-md p-4">
                <!-- Modal content -->
                <div class="bg-white rounded-lg shadow-lg">
                    <!-- Modal header -->
                    <div class="flex justify-between items-center p-4 border-b">
                        <h3 class="text-lg font-semibold">Add Admin</h3>
                        <button type="button" class="text-gray-400 hover:text-gray-900" data-modal-hide="addAdminModal">
                            âœ•
                        </button>
                    </div>

                    <!-- Modal body -->
                    <form action="/admin/addadmin" method="POST" class="p-4">
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" id="name" name="name"
                            class="w-full px-3 py-2 border rounded-md mb-4 focus:ring focus:ring-blue-300" required>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email" name="email"
                            class="w-full px-3 py-2 border rounded-md mb-4 focus:ring focus:ring-blue-300" required>

                        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                        <input type="password" id="password" name="password"
                            class="w-full px-3 py-2 border rounded-md mb-4 focus:ring focus:ring-blue-300" required>

                        <!-- Buttons -->
                        <div class="flex justify-end space-x-2">
                            <button type="button" data-modal-hide="addAdminModal"
                                class="px-4 py-2 bg-gray-400 text-white rounded-md">Cancel</button>
                            <button type="submit"
                                class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>