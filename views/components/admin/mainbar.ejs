<div class="bg-white p-5 rounded-xl shadow-md flex justify-between items-center">
    <h1 class="text-2xl md:text-3xl font-bold text-[#316de5]">
        <i class="fas fa-chart-pie"></i> Dashboard Overview
    </h1>
    <%- include("./profile")  %>
</div>

<div class="mb-4 border-b border-gray-200">
    <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="dashboard-tabs" role="tablist">

        <li class="me-2" role="presentation">
            <button class="tab-btn inline-block p-4 border-b-2 rounded-t-lg text-[#316de5] border-[#316de5] font-bold"
                id="analytics-tab" data-tabs-target="#analytics" data-section="analytics" type="button" role="tab"
                aria-controls="analytics" aria-selected="true">
                <i class="fas fa-chart-line"></i> Analytics
            </button>
        </li>

        <li class="me-2" role="presentation">
            <button
                class="tab-btn inline-block p-4 border-b-2 rounded-t-lg text-gray-500 border-transparent hover:text-gray-600"
                id="user-management-tab" data-tabs-target="#user-management" data-section="user-management"
                type="button" role="tab" aria-controls="user-management" aria-selected="false">
                <i class="fas fa-users"></i> User Management
            </button>
        </li>

        <li class="me-2" role="presentation">
            <button
                class="tab-btn inline-block p-4 border-b-2 rounded-t-lg text-gray-500 border-transparent hover:text-gray-600"
                id="book-management-tab" data-tabs-target="#book-management" data-section="book-management"
                type="button" role="tab" aria-controls="book-management" aria-selected="false">
                <i class="fas fa-book"></i> Book Management
            </button>
        </li>

        <li class="me-2" role="presentation">
            <button
                class="tab-btn inline-block p-4 border-b-2 rounded-t-lg text-gray-500 border-transparent hover:text-gray-600"
                id="book-req-tab" data-tabs-target="#book-req" data-section="book-req" type="button" role="tab"
                aria-controls="book-req" aria-selected="false">
                <i class="fas fa-cog"></i> BookRequests
            </button>
        </li>

        <li class="me-2" role="presentation">
            <button
                class="tab-btn inline-block p-4 border-b-2 rounded-t-lg text-gray-500 border-transparent hover:text-gray-600"
                id="announcements-tab" data-tabs-target="#announcements" data-section="announcements" type="button" role="tab"
                aria-controls="announcements" aria-selected="false">
                <i class="fas fa-cog"></i> announcements
            </button>
        </li>
    </ul>
</div>