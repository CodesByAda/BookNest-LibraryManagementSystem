<div class="relative">
    <button id="profileBtn" data-dropdown-toggle="profileDropdown" 
        class="flex items-center space-x-2 hover:text-[#316df8] transition relative">
        <% if (adminAcc && adminAcc.profilePic) { %>
            <img src="<%= adminAcc.profilePic %>" alt="Profile Picture" 
                class="w-10 h-10 rounded-full object-cover border border-gray-300">
        <% } else { %>
            <img src="https://ui-avatars.com/api/?name=<%= adminAcc ? adminAcc.name : 'Admin' %>&background=316de5&color=fff"
                alt="Default Profile Picture" 
                class="w-10 h-10 rounded-full border border-gray-300">
        <% } %>
    </button>

    <!-- Dropdown Menu -->
    <div id="profileDropdown" 
        class="hidden z-10 absolute mt-2 bg-white shadow-md rounded-lg w-44 border border-gray-200 right-0">
        <a href="/" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Home</a>
        <a href="/profile/<%= adminAcc._id %>" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Profile</a>
        <a href="/books" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Book List</a>
        <a href="/logout" class="block px-4 py-2 text-gray-700 hover:text-white hover:bg-red-600">Logout</a>
    </div>
</div>
