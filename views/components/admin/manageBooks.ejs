<div id="manage-books" class="section hidden bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
        ðŸ“š Manage Books
    </h2>
    <p class="mb-4 text-gray-600">Here you can add, edit, and delete books.</p>

    <!-- Table -->
    <div class="overflow-x-auto">
        <table class="w-full border-collapse rounded-lg overflow-hidden shadow-lg">
            <thead class="bg-[#316de5] text-white">
                <tr>
                    <th class="p-4 text-left">Title</th>
                    <th class="p-4 text-left">Author</th>
                    <th class="p-4 text-left">Category</th>
                    <th class="p-4 text-left">Availability</th>
                    <th class="p-4 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="border-b hover:bg-gray-100 transition">
                    <td class="p-4">The Great Gatsby</td>
                    <td class="p-4">F. Scott Fitzgerald</td>
                    <td class="p-4">Fiction</td>
                    <td class="p-4 text-green-600 font-semibold">Available</td>
                    <td class="p-4 flex items-center justify-center space-x-2">
                        <form action="/admin/edit-book" method="POST">
                            <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md transition">
                                Edit
                            </button>
                        </form>
                        <form action="/admin/delete-book/?_method=DELETE" method="POST">
                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Delete All Button -->
    <div class="flex justify-end mt-4">
        <form action="/admin/delete-all-books/?_method=DELETE" method="POST">
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-md shadow-md transition">
                Delete All Books
            </button>
        </form>
    </div>
</div>
