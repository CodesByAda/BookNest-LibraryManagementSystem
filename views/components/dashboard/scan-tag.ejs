<div class="p-6 bg-gray-100 min-h-screen">
    <!-- Title and Action Buttons -->
    <div class="flex justify-between items-center mx-auto mb-10 max-[537px]:block max-[537px]:gap-4 max-[537px]:mb-6">
        <div>
            <h2 class="text-3xl font-bold text-gray-800">Student ID Card</h2>
            <p class="text-gray-600">Your digital library card with scan tag</p>
        </div>
        <div class="flex gap-4">
            <a href="/dashboard?section=profile">
                <button class="px-4 py-2 border rounded-md bg-white hover:bg-gray-100 text-[#3c2207] font-medium flex items-center gap-2 hover:cursor-pointer">
                    ‚Üê Back to Profile
                </button>
            </a>
        </div>
    </div>

    <!-- ID Card Container -->
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <!-- Header -->
        <div class="bg-[#5d2c06] text-white px-6 py-3 flex justify-between items-center">
            <div class="font-bold text-lg flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path d="M12 7v14"></path>
                    <path d="M3 18a1 1 0 01-1-1V4a1 1 0 011-1h5a4 4 0 014 4 4 4 0 014-4h5a1 1 0 011 1v13a1 1 0 01-1 1h-6a3 3 0 00-3 3 3 3 0 00-3-3z"></path>
                </svg>
                <span>BookNest</span>
            </div>
            <div class="text-right text-sm">
                <span class="block font-medium">LIBRARY SCANTAG</span>
            </div>
        </div>

        <!-- ID Body -->
        <div class="px-6 py-6 text-[#3c2207] bg-[#faf7f5]">
            <div class="flex items-center max-[533px]:flex-col max-[533px]:justify-center gap-6">
                <!-- Profile Pic -->
                <div class="w-28 h-28 border-2 border-yellow-500 rounded-full flex items-center justify-center overflow-hidden">
                    <% if (profile.profilePic) { %>
                        <img src="<%= profile.profilePic %>" alt="Profile Picture"
                          class="w-full h-full rounded-full object-cover">
                      <% } else { %>
                        <img src="https://ui-avatars.com/api/?name=<%= profile.name %>&background=316de5&color=fff"
                          alt="w-full h-full Default Profile Picture" class="rounded-full">
                      <% } %>
                </div>
        
                <!-- Info -->
                <div class="flex-1 text-sm space-y-2">
                    <h2 class="text-lg font-bold text-[#8b4513] mb-1 max-[533px]:text-center"><%= profile.name %></h2>
        
                    <div class="flex justify-between text-sm">
                        <span class="font-semibold text-gray-500">Reg Number:</span>
                        <span class="font-bold"><%= profile.rollno %></span>
                    </div>
        
                    <div class="flex justify-between text-sm">
                        <span class="font-semibold text-gray-500">Course:</span>
                        <span class="font-bold"><%= profile.course%> / S<%= profile.semester %></span>
                    </div>
        
                    <div class="flex justify-between text-sm">
                        <span class="font-semibold text-gray-500">Phone:</span>
                        <span class="font-bold"><%= profile.phone%></span>
                    </div>
        
                    <div class="flex justify-between text-sm">
                        <span class="font-semibold text-gray-500">Email:</span>
                        <span class="font-bold text-[#3b3b3b] text-xs"><%= profile.email %></span>
                    </div>
                </div>
            </div>
        
            <!-- Barcode / Scan Code -->
            <div class="mt-6 flex justify-center">
                <div class="border border-gray-100 rounded bg-white shadow-md">
                    <img src="<%= qrCode %>" alt="Scan Code" class="h-32 object-contain mx-auto" />
                    <p class="text-xs text-center text-gray-500 my-2">Scan to verify</p>
                </div>
            </div>
        
            <!-- Footer Note -->
            <p class="text-xs text-center text-gray-500 mt-6">
                This card is the property of BookNest<br>
                Student BookNestID: <%= profile._id %>
            </p>
        </div>
    </div>
</div>
