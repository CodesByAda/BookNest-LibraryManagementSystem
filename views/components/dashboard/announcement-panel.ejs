<div class="p-6 bg-gray-100">
    <h2 class="text-2xl font-bold text-gray-800">Announcements</h2>
    <p class="text-gray-600 mb-6">Create and manage library announcements for students and staff.</p>

    <div class="grid grid-cols-1 <% isAdmin ? 'md:grid-cols-2' : 'md:grid-cols-1' %> gap-6 ">
        <% if (isAdmin) { %>
            <!-- Create Announcement -->
            <div class="p-6 rounded-xl shadow border border-yellow-100 bg-[#faf7f5]">
                <h3 class="text-lg font-semibold text-yellow-600 flex items-center mb-1">
                    <i class="fas fa-bell mr-2"></i> Create Announcement
                </h3>
                <p class="text-sm text-gray-600 mb-4">Create a new announcement to be displayed to library users.</p>
    
                <form action="/admin/addannouncement" method="POST" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                        <input type="text" name="title" placeholder="Enter announcement title" required
                            class="w-full border bg-[#f7f5ed] border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-yellow-500 focus:border-yellow-500">
                    </div>
                
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Content</label>
                        <textarea name="message" rows="4" placeholder="Enter announcement content" required
                            class="w-full border bg-[#f7f5ed] border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-yellow-600"></textarea>
                    </div>
                
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Importance Level</label>
                        <select name="importance" class="w-full border bg-[#f7f5ed] border-gray-300 rounded-md px-3 py-2 text-sm">
                            <option value="Low">Low</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="High">High</option>
                        </select>
                    </div>
                
                    <button type="submit"
                        class="w-full bg-yellow-800 hover:bg-yellow-900 text-white font-semibold rounded-lg text-sm py-2.5">
                        Publish Announcement
                    </button>
                </form>            
            </div>
            <%- include('./curr-announcemnt') %>
        <% } else { %>
            <%- include('./curr-announcemnt') %>
        <% } %>
    </div>
</div>