<div class="bg-white shadow-md rounded-lg p-4 max-w-[200px] h-[290px] flex flex-col justify-between">
    <% if (coverImage.startsWith('data:image')) { %>
        <img src="<%= coverImage %>" alt="Book Cover" class="w-full h-40 object-cover rounded-md">
    <% } else { %>
        <img src="/images/book.jpg" alt="Default Cover" class="w-full h-40 object-cover rounded-md">
    <% } %> 

    <!-- Book Title (One Line, Truncated) -->
    <h3 class="text-lg font-semibold mt-3 book-title truncate" title="<%= bookname %>">
        <%= bookname %>
    </h3>

    <!-- Author Name (One Line, Truncated) -->
    <p class="text-gray-600 truncate" title="<%= authorname %>">
        Author: <%= authorname %>
    </p>

    <!-- Availability (Colored Text) -->
    <p class="text-sm <%= availability === 'Available' ? 'text-green-600' : 'text-red-600' %> truncate">
        <%= availability %>
    </p>

    <!-- View Details Link (Always at Bottom) -->
    <a href="/books/<%= bookid %>" class="text-blue-600 hover:underline mt-auto">View Details</a>
</div>
