<% if (coverImage && coverImage.startsWith('data:image')) { %>
    <img src="<%= coverImage %>" alt="Book Cover" class="w-full h-40 object-cover rounded-md">
<% } else { %>
    <img src="/images/book.jpg" alt="Book Cover" class="w-full h-40 object-cover rounded-md">
<% } %>

<h3 class="mt-3 font-semibold text-lg truncate book-title"><%= bookname %></h3> <!-- Added 'book-title' -->
<p class="text-sm text-gray-500 truncate"><%= authorname %></p>
<p class="text-sm <%= availability === 'Available' ? 'text-green-600' : 'text-red-600' %> truncate"><%= availability %></p>
<a href="/books/<%= bookid %>" class="text-blue-600 hover:underline mt-auto">View Details</a>