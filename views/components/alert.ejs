<style>
    .progress-bar {
        height: 3px;
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
        background-color: inherit;
        animation: shrink 3s linear forwards;
    }

    @keyframes shrink {
        from {
            width: 100%;
        }

        to {
            width: 0%;
        }
    }

    .flash-message {
        transition: opacity 0.3s ease-in-out;
    }
</style>

<% if (messages.success) { %>
    <div id="flash-message" class="flash-message absolute top-5 left-1/2 transform -translate-x-1/2 z-50 
        flex items-center p-4 text-green-800 rounded-lg bg-green-50 shadow-lg w-fit"
        role="alert">
        <svg class="shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
            viewBox="0 0 20 20">
            <path
                d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 1 1 1 1v4h1a1 1 0 0 1 0 2Z" />
        </svg>
        <div class="ms-3 text-sm font-medium">
            <%= messages.success %>
        </div>
        <button onclick="closeFlash()" class="ml-4 text-green-800 hover:text-green-600">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
        </button>
        <div class="progress-bar bg-green-400"></div>
    </div>
<% } %>

<% if (messages.error) { %>
    <div id="flash-message" class="flash-message absolute top-5 left-1/2 transform -translate-x-1/2 z-50 
        flex items-center p-4 text-red-800 rounded-lg bg-red-50 shadow-lg w-fit"
        role="alert">
        <svg class="shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
            viewBox="0 0 20 20">
            <path
                d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 1 1 1 1v4h1a1 1 0 0 1 0 2Z" />
        </svg>
        <div class="ms-3 text-sm font-medium">
            <%= messages.error %>
        </div>
        <button onclick="closeFlash()" class="ml-4 text-red-800 hover:text-red-600">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
        </button>
        <div class="progress-bar bg-red-400"></div>
    </div>
<% } %>

<script>                    
    function closeFlash() {
        const flash = document.getElementById("flash-message");
        if (flash) {
            flash.style.opacity = "0";
            setTimeout(() => flash.remove(), 300); 
        }
    }                    
    setTimeout(closeFlash, 3000);
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
