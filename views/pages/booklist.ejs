<%- include("../components/header") %>
    <%- include("../components/booklist/navbar") %>

        <div class="max-w-4xl mx-auto mt-8 px-4 relative">
            <input type="text" id="searchInput" placeholder="Search books..."
                class="w-full p-3 rounded-lg bg-white shadow-md focus:ring-[#316df8] focus:border-[#316df8]"
                autocomplete="off">
            <div id="suggestions" class="absolute w-full bg-white border rounded shadow-md hidden mt-1 z-50"></div>
            <!-- Added z-index -->
        </div>

        <!-- ðŸ“š Book Grid -->
        <div id="bookList" class="max-w-6xl mx-auto mt-8 px-4 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% for(let book of books) { %>
                <div class="book-card bg-white p-4 rounded-lg shadow-md flex flex-col">
                    <%- include("../components/booklist/bookcard", { bookname: book.bookname, authorname:
                        book.authorname, availability: book.availability, bookid: book._id, coverImage: book.coverImage
                        }) %>
                </div>
                <% } %>

                    <% if (isAdminId) { %>
                        <a href="/admin/addbook" class="book-card bg-white p-4 rounded-lg shadow-md flex flex-col items-center justify-center cursor-pointer hover:bg-gray-100">
                            <span class="text-4xl text-[#316df8]">+</span>
                            <p class="text-sm text-gray-500">Add New Book</p>
                        </a>
                        <% } %>

        </div>


        <!-- ðŸ“¢ **Announcements (Bottom Timeline)** -->
        <section class="bg-white shadow-md p-8 mt-12">
            <h2 class="text-2xl font-semibold text-center mb-6">ðŸ“¢ Announcements</h2>
            <ol class="relative border-s border-gray-200">
                <li class="mb-12 ms-4">
                    <div class="absolute w-4 h-4 bg-gray-200 rounded-full mt-1.5 -start-2 border border-white"></div>
                    <time class="mb-2 text-md font-normal leading-none text-gray-400">March 10, 2025</time>
                    <h3 class="text-xl font-semibold text-gray-900">Library Maintenance</h3>
                    <p class="mb-4 text-lg text-gray-500">The library will be closed on March 15th for maintenance.</p>

                </li>
                <li class="mb-12 ms-4">
                    <div class="absolute w-4 h-4 bg-gray-200 rounded-full mt-1.5 -start-2 border border-white"></div>
                    <time class="mb-2 text-md font-normal leading-none text-gray-400">March 5, 2025</time>
                    <h3 class="text-xl font-semibold text-gray-900">New Arrivals</h3>
                    <p class="text-lg text-gray-500">A fresh batch of books is now available in the library.</p>
                </li>
            </ol>
        </section>
        <script src="/javascript/booklist-search.js"></script>