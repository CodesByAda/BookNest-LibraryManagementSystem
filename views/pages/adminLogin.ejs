<%- include("../components/header") %>
    <div class="w-full bg-gray-100 flex flex-col items-center">
        <%- include("../components/loginNavbar")  %>
        <!-- Page Layout -->
        <div class="flex flex-col lg:flex-row h-screen w-full overflow-hidden">
            <!-- Left Side - Login Section -->
            <div class="lg:w-1/2  flex justify-center items-center p-4 min-h-screen">
                <!-- Student Login Form (Default) -->
                <form class="w-1/2 px-6 py-4 space-y-4"  method="POST" action="/adminlogin">
                    <h2 class="text-xl font-semibold text-center">Admin Login</h2>
                    <input type="text" name="email" placeholder="Admin Username" class="w-full p-2 border rounded-md">
                    <input type="password" name="password" placeholder="Password" class="w-full p-2 border rounded-md">
                    <button class="w-full bg-[#316de5] text-white py-2 rounded-md">Login</button>
                </form>
            </div>

            <!-- Right Side - Image Section (Hidden on Small Screens) -->
            <div
                class="hidden lg:flex w-1/2 h-screen items-center justify-center bg-[url(/images/loginimage.jpg)] bg-cover bg-center">
            </div>
        </div>
    </div>
    </body>

    </html>