<%- include("../components/header") %>
    <%- include("../components/navbar")%>

        <!-- Centering Wrapper -->
        <div id="registrationdiv"
            class="registrationdiv flex items-center justify-center mt-4">
            <form id="studentForm" class="max-w-lg w-full bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Student Registration</h2>

                <!-- Name -->
                <label class="block mb-2 text-gray-700 font-semibold">Full Name</label>
                <input type="text" id="name" name="name"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-600">
                <p class="text-red-500 text-sm mt-1 hidden" id="nameError">Name is required.</p>

                <!-- Name -->
                <label class="block mb-2 text-gray-700 font-semibold">Password</label>
                <input type="password" id="password" name="password"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-600">
                <p class="text-red-500 text-sm mt-1 hidden" id="passwordError">Password is required.</p>

                <!-- Department -->
                <label class="block mt-3 mb-2 text-gray-700 font-semibold">Department</label>
                <input type="text" id="department" name="department"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-600">
                <p class="text-red-500 text-sm mt-1 hidden" id="departmentError">Department is required.</p>

                <!-- Semester -->
                <label class="block mt-3 mb-2 text-gray-700 font-semibold">Semester</label>
                <select id="semester" name="semester"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-600">
                    <option value="" disabled selected>Select Semester</option>
                    <option value="1">1st</option>
                    <option value="2">2nd</option>
                    <option value="3">3rd</option>
                    <option value="4">4th</option>
                    <option value="5">5th</option>
                    <option value="6">6th</option>
                    <option value="7">7th</option>
                    <option value="8">8th</option>
                </select>
                <p class="text-red-500 text-sm mt-1 hidden" id="semesterError">Please select a semester.</p>

                <!-- Phone Number -->
                <label class="block mt-3 mb-2 text-gray-700 font-semibold">Phone Number</label>
                <div class="relative">
                    <input type="tel" id="phone" name="phone"
                        class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-600">
                    <span id="phoneTick" class="absolute right-3 top-3 hidden text-green-600">✅</span>
                </div>
                <p class="text-red-500 text-sm mt-1 hidden" id="phoneError">Enter a valid 10-digit phone number.</p>

                <!-- Email -->
                <label class="block mt-3 mb-2 text-gray-700 font-semibold">Email</label>
                <div class="relative">
                    <input type="email" id="email" name="email"
                        class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-600">
                    <span id="emailTick" class="absolute right-3 top-3 hidden text-green-600">✅</span>
                </div>
                <p class="text-red-500 text-sm mt-1 hidden" id="emailError">Enter a valid email.</p>

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full bg-[#316de5] text-white font-semibold py-2 mt-4 rounded-lg transition">
                    Register
                </button>
            </form>
        </div>


