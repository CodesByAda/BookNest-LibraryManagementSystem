<%- include("../components/header") %>
<%- include("../components/alert") %>

<!-- Print Button (Fixed Bottom-Right) -->
<div class="fixed bottom-4 right-4 z-50">
    <button onclick="printScanTag()" class="bg-[#316de5] text-white p-3 rounded-full shadow-md">
        <i class="fa-solid fa-download"></i>
    </button>
</div>

<!-- Full Page Centering -->
<div class="flex min-h-screen items-center justify-center bg-gray-100 p-4">
    <div id="scantag" class="w-full max-w-sm md:max-w-lg bg-white shadow-lg rounded-lg border border-gray-200">
        <!-- ID Card Header -->
        <div class="bg-[#316de5] text-white text-center py-3 rounded-t-lg">
            <h2 class="text-lg md:text-xl font-bold">ScanTag</h2>
        </div>

        <!-- Profile & Details Section -->
        <div class="p-6 flex flex-col items-center sm:flex-row sm:items-start max-sm:text-center  sm:text-left ">
            <!-- Profile Picture -->
            <div class="w-24 h-24 sm:w-32 sm:h-32 mb-4 sm:mb-0">
                <img src="<%= qrCode %>" alt="QR Code"
                    class="w-full h-full rounded-lg border border-gray-300 object-cover">
            </div>

            <!-- Student Details -->
            <div class="sm:ml-4 flex-1">
                <h2 class="text-lg md:text-xl font-bold text-gray-800"><%= student.name %></h2>
                <p class="text-gray-600 text-sm">Roll No: <%= student.rollno %></p>

                <p class="text-gray-700 text-sm mt-2">
                    <span class="font-semibold">Course:</span> <%= student.course %> |
                    <span class="font-semibold">Semester:</span> <%= student.semester %>
                </p>
            </div>
        </div>

        <!-- Address & Contact Section -->
        <div class="p-6 border-t border-gray-200 flex flex-col ">
            <!-- Address -->
            <div class="mb-4 sm:mb-0">
                <h3 class="text-lg font-semibold text-gray-800">Address</h3>
                <p class="text-gray-700 text-sm"><%= student.address %></p>
            </div>

            <!-- Divider (Visible only on larger screens) -->
            <div class="hidden sm:block w-full border-t border-gray-300 my-4"></div>

            <!-- Contact -->
            <div>
                <h3 class="text-lg font-semibold text-gray-800">Contact</h3>
                <p class="text-gray-700 text-sm"><span class="font-semibold">Phone:</span> <%= student.phone %></p>
                <!-- Scrollable Email on Small Screens -->
                <div class="text-gray-700 text-sm sm:break-words max-[260px]:hidden">
                    <span class="font-semibold">Email:</span> <%= student.email %>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center py-3">
            <p class="text-gray-600 text-xs sm:text-sm">
                Powered By <span class="text-[#316de5] font-semibold">BookNest</span>
            </p>
        </div>
    </div>
</div>

<!-- JavaScript for Printing -->
<script>
function printScanTag() {
    const printContent = document.getElementById("scantag").innerHTML;
    const originalContent = document.body.innerHTML;

    document.body.innerHTML = printContent;
    window.print();
    document.body.innerHTML = originalContent;
}
</script>

</body>
</html>
