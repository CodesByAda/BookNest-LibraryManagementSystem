    <script>
        const toggleBtn = document.getElementById('menu-toggle');
        const closeBtn = document.getElementById('close-menu');
        const mobileMenu = document.getElementById('mobile-menu');
        const bar1 = document.getElementById('bar1');
        const bar2 = document.getElementById('bar2');
        const bar3 = document.getElementById('bar3');
    
        function openMenu() {
            mobileMenu.classList.remove('translate-x-full');
            bar1.classList.add('rotate-45', 'top-4');
            bar3.classList.add('-rotate-45', 'top-4');
            bar2.classList.add('opacity-0');
        }
    
        function closeMenu() {
            mobileMenu.classList.add('translate-x-full');
            bar1.classList.remove('rotate-45', 'top-4');
            bar3.classList.remove('-rotate-45', 'top-4');
            bar2.classList.remove('opacity-0');
        }
    
        toggleBtn.addEventListener('click', () => {
            if (mobileMenu.classList.contains('translate-x-full')) {
                openMenu();
            } else {
                closeMenu();
            }
        });
    
        closeBtn.addEventListener('click', closeMenu);
    </script>
    <script>
        document.querySelectorAll('.faq-toggle').forEach(button => {
            button.addEventListener('click', () => {
                const content = button.nextElementSibling;
                const iconPath = button.querySelector('.icon-path');
                const isVisible = !content.classList.contains('hidden');
    
                // Close all
                document.querySelectorAll('.faq-content').forEach(el => el.classList.add('hidden'));
                document.querySelectorAll('.icon-path').forEach(path => {
                    path.setAttribute('d', 'M17 17V3H19V17H33V19H19V33H17V19H3V17H17Z'); // plus
                });
    
                // Toggle clicked one
                if (!isVisible) {
                    content.classList.remove('hidden');
                    iconPath.setAttribute('d', 'M3 17H33V19H3V17Z'); // minus
                }
            });
        });
    </script>    
