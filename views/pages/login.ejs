<%- include("../components/header") %>
<div class="w-full bg-gray-100 flex flex-col items-center">
    <nav id="navbar" class="bg-white/60 backdrop-blur-lg shadow-xl fixed w-[95%] z-20 top-4 border-gray-200 rounded-3xl">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="/" class="flex items-center space-x-0 rtl:space-x-reverse">
                <img src="/images/logo.png" class="h-8" alt="BookNest Logo">
                <span class="self-center text-2xl font-bold whitespace-nowrap">BookNest</span>
            </a>
            <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
                <button id="theme-toggle navbar-sticky" type="button" class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5">
                    <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
                    <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
                </button>
                <a href="/login" type="button" class="text-white bg-[#316de5] hover:bg-[#316df7] hover:cursor-pointer focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center">
                    Login
                </a>
                <button data-collapse-toggle="navbar-sticky" type="button"
                    class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
                    aria-controls="navbar-sticky" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 17 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M1 1h15M1 7h15M1 13h15" />
                    </svg>
                </button>
            </div>
            <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
                <ul
                    class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0">
                    <li>
                        <a href="/"
                            class="block py-2 px-3 text-white bg-blue-700 rounded-sm md:bg-transparent md:text-blue-700 md:p-0"
                            aria-current="page">Home</a>
                    </li>
                    <li>
                        <a href="#"
                            class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">About</a>
                    </li>
                    <li>
                        <a href="#"
                            class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Services</a>
                    </li>
                    <li>
                        <a href="#"
                            class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Layout -->
    <div class="flex flex-col lg:flex-row h-screen w-full overflow-hidden">
        <!-- Left Side - Login Section -->
        <div class="lg:w-1/2  flex justify-center items-center p-4 min-h-screen">
            <div class="w-full max-w-[400px] p-6 bg-white shadow-md rounded-lg">
                <!-- Toggle Buttons -->
                <div class="flex justify-between bg-gray-300 rounded-xl p-1 mb-6 relative">
                    <button id="adminBtn" class="w-1/2 py-2 rounded-xl text-center text-sm sm:text-base hover:cursor-pointer">Admin</button>
                    <button id="userBtn" class="w-1/2 py-2 rounded-xl text-center bg-white shadow-md text-sm sm:text-base hover:cursor-pointer">Student</button>
                </div>

                <!-- Slider Container -->
                <div class="relative w-full overflow-hidden">
                    <div id="slider" class="flex w-[200%] transition-transform duration-300 ease-in-out transform translate-x-0">
                        
                        <!-- Student Login Form (Default) -->
                        <form class="w-1/2 px-6 py-4 space-y-4">
                            <h2 class="text-xl font-semibold text-center">Student Login</h2>
                            <input type="text" placeholder="User Email" class="w-full p-2 border rounded-md">
                            <input type="password" placeholder="Password" class="w-full p-2 border rounded-md">
                            <button class="w-full bg-[#316de5] text-white py-2 rounded-md">Login</button>
                            <p class="text-center">Don't have an account? <a href="/register" class="text-blue-400 underline">Request here.</a></p>
                        </form>

                        <!-- Admin Login Form -->
                        <form class="w-1/2 px-6 py-4 space-y-4">
                            <h2 class="text-xl font-semibold text-center">Admin Login</h2>
                            <input type="text" placeholder="Admin Username" class="w-full p-2 border rounded-md">
                            <input type="password" placeholder="Password" class="w-full p-2 border rounded-md">
                            <button class="w-full bg-[#316de5] text-white py-2 rounded-md">Login</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Image Section (Hidden on Small Screens) -->
        <div class="hidden lg:flex w-1/2 h-screen items-center justify-center bg-[url(/images/loginimage.jpg)] bg-cover bg-center">
        </div>
    </div>
</div>

<script>
    const adminBtn = document.getElementById("adminBtn");
    const userBtn = document.getElementById("userBtn");
    const slider = document.getElementById("slider");

    // Default: Show User Form First (translateX(0))
    slider.style.transform = "translateX(0%)";
    userBtn.classList.add("bg-white", "shadow-md");

    adminBtn.addEventListener("click", () => {
        slider.style.transform = "translateX(-50%)"; // Show admin form
        adminBtn.classList.add("bg-white", "shadow-md");
        userBtn.classList.remove("bg-white", "shadow-md");
    });

    userBtn.addEventListener("click", () => {
        slider.style.transform = "translateX(0%)"; // Show user form
        userBtn.classList.add("bg-white", "shadow-md");
        adminBtn.classList.remove("bg-white", "shadow-md");
    });
</script>

</body>
</html>
